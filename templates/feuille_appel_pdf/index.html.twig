{% extends 'base.html.twig' %}

{% block title %}Hello FeuilleAppelPDFController!{% endblock %}

{% block body %}
<style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1, h2, h3 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
        }

        th {
            background-color: #f0f0f0;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #e9e9e9;
        }

        .school-name {
            font-size: 24px;
            font-weight: bold;
        }

        .course-name {
            font-size: 16px;
            font-weight: bold;
        }

        .instructor-name {
            margin-top: 20px;
            margin-bottom: 5px;
        }

        .present-checkbox {
            text-align: center;
        }

        .salle-name {
            margin-bottom: 20px;
        }
    </style>

<h1 class="school-name">{{ ecole }} {{ classe }}</h1>
<h3 class="course-name">{{ cours }}</h3>
<hr/>
<p class="instructor-name"><strong>Intervenant :</strong> {{ intervenant }}</p>
<p class="salle-name"><strong>Salle :</strong> {{ salle }}</p>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Présent</th>
        </tr>
    </thead>
    <tbody>
        {% for eleve in eleves %}
            <tr>
                <td>{{ eleve.nom }}</td>
                <td>{{ eleve.prenom }}</td>
                <td class="present-checkbox">{{ eleve.present ? 'Oui' : 'Non' }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
